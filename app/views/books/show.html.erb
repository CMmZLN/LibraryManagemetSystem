<div class="overFlow">
  <div style="display:flex">
    <nav class="col-3" style="">
      <%= render "layouts/nav"%>
    </nav>
  

    <section class="col-9 ">
      <h1 class="mt-3" style="text-align:center; font-weight:bold; margin-bottom:-8px">詳細</h1>

      <article>
        <div class="d-flex align-items-center gap-5 ">
            <div>
              <% if @book.book_image.attached? %>
                <%= image_tag @book.book_image, style: "width:300px;height:300px" %>
              <% end %>
            </div>
            <div class="d-flex flex-column gap-4">
              <div>
                  <label class="fw-bold">Title:</label>
                  <%= @book.title %>
              </div>
              <div>
                  <label class="fw-bold">Author:</label>
                  <%= @book.author %>
              </div>
              <div>
                <label class="fw-bold">Price:</label>
                <%= @book.price %>
              </div>
              <div>
                <label class="fw-bold">Pages:</label>
                <%= @book.pages %>
              </div>
              <div>
                <label class="fw-bold">Publisher:</label>
                <%= @book.publisher %>
              </div>
              <div>
                <label class="fw-bold">Availability:</label>
                <%= @book.availability %>
              </div>
            </div>
        </div>  
      </article>

    </section>
  </div>
</div>

  
